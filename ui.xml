<?xml version="1.0"?>
<StackPanel size="*" orientation="vertical" name="samples">
    <PageView size="*" selected="3" name="page">
        <StackPanel size="*" orientation="vertical" name="0">
            <TextBlock text.color="white" text="this demo is testing that after text width is changed, parent containers layout gets recalculated" />
            <StackPanel orientation="horizontal" size="*">
                <TextBlock name="txtTestWidth" text="test" text.color="white" />
                <StackPanel size="200,200" orientation="vertical">
                    <Button text="do nothing" />
                    <Button name="btnChangeText" text="click me!" color="blue" text.color="white" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel size="*" orientation="vertical" name="1">
            <TextBlock text.color="white" text="this demo provides control over visible and enabled properties" />
            <StackPanel orientation="horizontal" size="*">
                <Button text="button!" name="btnTestButton" color="200,130,20" enabled="false" margin="5" />
                <Button name="btnToggleEnabled" text="enable" margin="5" />
                <Button name="btnToggleVisible" text="hide" margin="5" />
            </StackPanel>
        </StackPanel>
        <StackPanel size="*" orientation="vertical" name="2">
            <TextBlock text.color="white" text="this demo provides tests how relative widths affect layout" />
            
            <Panel margin="10" size="300,300" name="part2_panel" >
                <Button color="gray" size="*" name="btnBackground" />
                <StackPanel size="*" orientation="horizontal" name="par2_sp">
                    <Button color="red" margin="5" size="33%,33%" text="33%" name="btn33" />
                    <Button color="green" margin="5" size="66%,66%" text="66%" name="btn66" />
                </StackPanel>
            </Panel>
            
            <Panel margin="10" size="*" name="part2_panel2" >
                <Button color="gray" size="*" name="btnBackground2" />
                <StackPanel size="*" orientation="horizontal" name="par2_sp2">
                    <Button color="red" margin="5" size="33%,33%" text="33%" name="btn33b" />
                    <Button color="green" margin="5" size="66%,66%" text="66%" name="btn66b" />
                </StackPanel>
            </Panel>
        </StackPanel>
        <Using text.color="white">
            <StackPanel size="*" orientation="vertical" name="3">
                <TextBlock text="sliders are a simple way to get feedback from the user:" margin="5" name="3_title" />
                <StackPanel orientation="horizontal" >
                    <TextBlock text="default:"  />
                    <Slider />
                </StackPanel>
                <StackPanel orientation="horizontal" >
                    <TextBlock text="0,1,1:"  />
                    <Slider max="1" step="1" />
                </StackPanel>
                <StackPanel orientation="horizontal" >
                    <TextBlock text="1,3,0:"  />
                    <Slider min="1" max="3" step="0" value="2" />
                </Grid>
            </StackPanel>
        </Using>
    </PageView>
    <Panel size="*,40">
        <Button color="gray" size="*" />
        <StackPanel orientation="horizontal" size="*">
            <Button name="btnPrev"
                    text="Prev" 
                    text.align="center"
                    text.color="white"
                    color="Pink"
                    size="auto,*"
                    margin="5"
                    align="left" />
            <Panel  size="*">
                <TextBlock name="txtStatus"
                    text="hello world!" 
                    text.align="center"
                    text.color="white"
                    size="*" />
            </Panel>
            <Button name="btnNext"
                    text="Next" 
                    text.align="center"
                    text.color="white"
                    color="Pink"
                    margin="5"
                    size="auto,*"
                    align="right" />   
        </StackPanel>
    </Panel>
</StackPanel>
